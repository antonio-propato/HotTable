<h1>Restaurants</h1>

<%= link_to 'New Restaurant', new_restaurant_path %> <br><br>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Address</th>
      <th>Telephone</th>
      <th>Email</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.restaurant_name %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.telephone %></td>
        <td><%= restaurant.email %></td>
        <td><%= restaurant.capacity %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Remove', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
